{* Latte template *}

{block content}
	<h3>Detail materiálu</h3>
	<table class="table">
		<tr>
			<th>Id</th>
			<th>Názov</th>
			<th>Množstvo</th>
			<th>Sekcia</th>
			<th>Popis</th>
			<th>Váha</th>
			<th>Edit</th>
		</tr>
		<tr>
			<td>{$list->id}</td>
			<td>{$list->name}</td>
			<td>{$list->quantity}</td>
			<td>{$list->section}</td>
			<td>{$list->description}</td>
			<td>{$list->weight}</td>
			<td><a n:href="material:edit $list->id">Edit</a></td>
		</tr>
	</table>

